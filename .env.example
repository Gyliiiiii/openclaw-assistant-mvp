# Deepgram API Key (语音识别)
# 获取地址: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=nova-2
# 可选: nova-2 (支持中文) | nova-3 (仅英文等，延迟更低)
DEEPGRAM_LANGUAGE=zh-CN
# 可选: zh-CN (中文) | en-US (英文) | 其他语言代码

# TTS 配置
TTS_PROVIDER=minimax
# 可选: minimax | elevenlabs

# MiniMax TTS 配置
# 获取地址: https://www.minimaxi.com/
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here
MINIMAX_MODEL=speech-02-turbo
MINIMAX_VOICE_ID=Lovely_Girl

# ElevenLabs TTS 配置
# 获取地址: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# 推荐中文音色: pNInz6obpgDQGcFmaJgB (Adam - 多语言)

# MQTT Broker
# 开发环境: mqtt://localhost:1883 (本地 Mosquitto)
# 测试环境: mqtt://broker.emqx.io:1883 (EMQX 公共 Broker)
# 生产环境: wss://xxx.ala.cn-hangzhou.emqxsl.cn:8084/mqtt (EMQX Cloud Serverless)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_DEVICE_ID=desktop-001
# MQTT 认证 (EMQX Cloud Serverless 必填)
MQTT_USERNAME=
MQTT_PASSWORD=
